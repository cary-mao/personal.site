@import '~normalize.css'
@import './grid.styl'
@import './post.styl'
@import './new-moon.styl'

@font-face
    font-family Inter
    src url('https://fonts.gstatic.com/s/inter/v12/UcC73FwrK3iLTeHuS_fvQtMwCp50KnMa1ZL7.woff2') // fonts.gstatic.com/s/inter/v12/UcC73FwrK3iLTeHuS_fvQtMwCp50KnMa1ZL7.woff2);
@font-face
    font-family 'IBM Plex Mono'
    src url('https://fonts.gstatic.com/s/ibmplexmono/v15/-F63fjptAgt5VM-kVkqdyU8n1i8q1w.woff2') // fonts.gstatic.com/s/ibmplexmono/v15/-F63fjptAgt5VM-kVkqdyU8n1i8q1w.woff2)
:root
    --gray-0 #f9f9f9
    --gray-05 #f6f6f6
    --gray-1 #eee
    --gray-2 #e6e6e6
    --gray-3 #ddd
    --gray-4 #bbb
    --gray-5 #999
    --gray-6 #666
    --gray-65 #555
    --gray-7 #2c2c2c
    --gray-8 #252525
    --gray-9 #1f1f1f
    --gray-10 #181818
    --green #14ae73
    --green-1 #95cd7f
    --green-2 #73b18a
    --green-3 #4d8994
    --green-4 #30619d
    --green-5 #30379d
    --red #f34646
    --red-1 #fdd94a
    --red-2 #e0a944
    --red-3 #d37d36
    --red-4 #cd583c
    --red-5 #ab2e3f
    --blue #07a7e6
    --blue-1 #70bdee
    --blue-2 #618be1
    --blue-3 #5b5ed5
    --blue-4 #623ac6
    --blue-5 #58119f
    --rainbow-1 #ff67f7
    --rainbow-2 #936df9
    --rainbow-3 #59abf7
    --rainbow-4 #5eddac
    --rainbow-5 #f6cd5d
    --orange #ff7e22
    --yellow #fca62a
    --pink #f57ad0
    --purple #673ece
    --indigo #5a43f1
    --indigo-dark #4509cf
    --indigo-light #969bf6
    --indigo-muted #f1f2fd
    --font-family-base 'Inter', -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif
    --font-family-monospace Menlo, 'IBM Plex Mono', Menlo, monospace
    --font-family-heading -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif
    --font-family-nav -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif
    --font-color-base var(--gray-7)
    --font-color-muted var(--gray-6)
    --font-color-heading var(--gray-8)
    --font-color-heading3 var(--gray-7)
    --font-color-bright var(--gray-9)
    --font-color-hero-heading var(--gray-0)
    --border-color var(--gray-3)
    --border-color-hover var(--gray-6)
    --border-radius 6px
    --background-color #eee
    --card-background-color var(--gray-0)
    --button-background-color var(--gray-05)
    --marker var(--pink)
    --link var(--indigo)
    --link-hover-color var(--indigo-muted)
    --navbar var(--gray-1)
    --navbar-border var(--gray-2)
    --navbar-color var(--gray-8)
    --navbar-color-hover var(--gray-9)
    --year var(--green)
    --star var(--yellow)
    --post-time-color var(--gray-6)
    --card-time-color var(--gray-5)
    --project-time-color var(--font-color-muted)
    --highlight-color var(--green)
    --blockquote-background var(--indigo-muted)
    --file-background #eee
    --inline-code-background-color var(--gray-0)
    --theme-button-background var(--gray-1)
    --theme-button-background-hover var(--gray-2)
    --theme-button-border var(--gray-3)
    --theme-button-border-hover var(--gray-5)
    --theme-button-color var(--gray-7)
    --theme-button-color-hover var(--gray-9)
    --category-link #dd4eb2
    --scrollbar-color var(--gray-3)
    --scrollbar-track var(--gray-4)
    --content-width 1160px
    --content-width--small 560px
    --content-width--medium 700px
    --navbar-height-large 80px
    --navbar-height-small 60px
    --code-font-color #232529
    --code-background-color var(--gray-0)
    --code-border-color var(--gray-3)
    --terminal-background-color #fff
    --terminal-bar -webkit-linear-gradient(top, #ebebeb, #d5d5d5)
    --terminal-accent #fff
    --terminal-border #cecbce
    --string #3b9039
    --variable #383a41
    --property #565656
    --number #da7430
    --operator #a87200
    --punctuation #5c6d74
    --comment #869496
    --function #0582b7
    --keyword #a208ba
    --attribute #a87200
    --class #c52387
    --tag #365ccd
    --error #b0292c
    --code-link-hover var(--link)
    --highlight-code-color rgb(116, 207, 116, 0.2)
    --sidebar-nav-background-color #fff
    --fork var(--gray-7)
// base
*, *::before, *::after
    box-sizing border-box
body
    color var(--font-color-base)
    background-color var(--background-color)
    font-family var(--font-family-base)
img
    width 100%
.layout
    display flex
    flex-direction column
    min-height 100vh
.container
    margin auto
    max-width var(--content-width)
::-webkit-scrollbar
    position absolute
    right 0
    width 6px
    height 6px
::-webkit-scrollbar-corner
    background #ccc
::-webkit-scrollbar-thumb
    background-color rgba(53, 170, 220, 0.5)
    opacity 0.5
    border-radius 4px
// tools
.flex
    display flex
.space-between
    justify-content space-between
.align-items-center
    align-items center
.circle
    border-radius 50%
.triangle
    display block
    width 0
    height 0
    border 0.25rem solid transparent
    border-top-color var(--font-color-base)
.ellipsis
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
// components
.sidebar
    width 300px
    margin-left 6rem
.button
    display inline-flex
    align-items center
    padding 0.75rem 1.2rem
    font-size 0.95rem
    font-weight 500
    letter-spacing 0
    text-decoration none
    color var(--font-color-base)
    background var(--button-background-color)
    border 1px solid var(--border-color)
    border-radius 24px
    outline 0
    cursor pointer
    &:hover
        border 1px solid var(--border-color-hover)
.card-dl
    padding 1.5rem
    background-color var(--card-background-color)
.card-dt
    h2
        margin 0
        margin-bottom 1.5rem
        font-size 1.2rem
.card-dd
    a
        display flex
        justify-content space-between
        padding 0.5rem
        text-decoration none
        color var(--font-color-heading)
// content
.header-anchor
    text-decoration none
    color var(--font-color-heading)
.c-tag
    display inline-block
    margin 0 0.5rem
    padding 0.5rem
    font-size 12px
    color #fff
    border-radius 4px
    background-color var(--rainbow-3)
    &:nth-child(1)
        background var(--rainbow-3)
    &:nth-child(2)
        background var(--rainbow-2)
    &:nth-child(3)
        background var(--red-3)
    &:nth-child(4)
        background var(--yellow)
    &:nth-child(5)
        background var(--gray-4)
